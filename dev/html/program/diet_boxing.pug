extends ../../_src/_pug/_extend_html5

//- layout 에서 선언한 공통적인 title 값이 맨뒤에 들어 감.
block title
	title #{metaTitle_main} #{title}
	//- 뎁스별로 경로 바꿀때
	- var url_css_0 = url_css_2;
	- var url_js_0 = url_js_2;
	- var url_img_common_0 = url_img_common_2;

block keywords&description
	meta(name="keywords" content=`${metaKeywords_main}`)
	meta(name="description" content=`${metaDescription_main}`)

block property
	meta(property="og:title" content=`${ogTitle_main}`)
	meta(property="og:url" content=`${ogUrl_main}`)
	meta(property="og:image" content=`${ogImage_main}`)
	meta(property="og:description" content=`${ogDescription_main}`)

append css

block vars
	- var bodyClass = 'ui_dep2'
	- var wrapClass = ''

block contents
	#container
		#content(role='main')
			// 2dep 탭 영역
			.dep2-wrap
				label(for="dep2")
				select(name="dep2" id="dep2")
					option(selected="selected" value="../program/diet_boxing.html") 다이어트 복싱
					option(value="../program/pt.html") 개인 P.T
					option(value="../program/kid_boxing.html") 키즈복싱
					option(value="../program/real_boxing.html") 정통복싱

			// full 영역일 경우
			.cont
				// full bg 영역
				.program-wrap
					//비디오 영역
					.program-video-bg
						.program-video-wrap
							.video-box
								<iframe class="video" width="320" height="180" src="https://www.youtube.com/embed/VUigoI2lh4w?autoplay=1" frameborder="0" allowfullscreen></iframe>


					// 텍스트 영역
					.program-txt-wrap
						// 타이틀
						p.program-tit 다이어트 복싱 프로그램
						// 이미지
						img(src="../../images/pc/img_pro02.jpg", alt="다이어트 복싱 프로그램").img-pc
						// 컨텐츠 텍스트
						.program-txt-cont.clfix
							.l-wrap
								p.sub-tit 복싱,<br>더 이상 어렵지 않아요.
							.r-wrap
								span.txt 다이어트에 최적화되어 설계된 프로그램으로 체조성 검사를 통해 본인에게 맞는 강도의 트레이닝을 통해 복싱을 배웁니다. 실전적인 기술들 및 스파링 보다는 에너지 소비량이 많은 복싱 기술들로 구성되어 운동목적을 달성할 수 있습니다. 지도진이 돌며 밀착 지도를 통해 쉽고 재미있게 운동 할 수 있습니다.<br>타 운동들과 비교할 수 없는 속도감 있는 다이어트를 체험할 수 있습니다.
								em.etc-txt - 남녀노소 누구나 이용 가능 (8세부터)

							




append script
	script.