extends ../../_src/_pug/_extend_html5

//- layout 에서 선언한 공통적인 title 값이 맨뒤에 들어 감.
block title
	title #{metaTitle_main} #{title}
	//- 뎁스별로 경로 바꿀때
	- var url_css_0 = url_css_2;
	- var url_js_0 = url_js_2;
	- var url_img_common_0 = url_img_common_2;

block keywords&description
	meta(name="keywords" content=`${metaKeywords_main}`)
	meta(name="description" content=`${metaDescription_main}`)

block property
	meta(property="og:title" content=`${ogTitle_main}`)
	meta(property="og:url" content=`${ogUrl_main}`)
	meta(property="og:image" content=`${ogImage_main}`)
	meta(property="og:description" content=`${ogDescription_main}`)

append css

block vars
	- var bodyClass = 'ui_dep2'
	- var wrapClass = ''

block contents
	#container
		#content(role='main')
			// 2dep 탭 영역
			.dep2-wrap
				label(for="dep2")
				select(name="dep2" id="dep2")
					option(selected="selected") 채용지원
					option 창업문의

			
			.cont
				.recruit-wrap

					.recruit-txt-wrap
						.recruit-tit
							p.tit SM 스포츠 인재 양성소 교육생 모집
							span.sub-tit 스포츠를 통해 지, 덕, 체를 함양한 멋진 스포츠 인재를 양성, 취업 등<br>사회에 선한 영향력을 전하는 멋진 스포츠 기업, sm복싱클럽에서 꿈을 함께할 교육생을 모집합니다. 

					.recruit-bg

					.recruit-txt-wrap
						.recruit-info-wrap
							p.tit 상세 모집 요강
							dl
								dt.sub-tit 복싱 지도자 (코치/트레이너)
								dd.txt - 담당업무 : 관원 지도 및 체육관 관리  (우대 사항 : 체육관련 자격증, 체육학 전공자)
								dt.sub-tit P.T팀 (개인지도)
								dd.txt - 담당업무 : 개인지도, 트레이닝 지도 (우대사항 : 트레이너 관련 자격증, 체육관련 자격증)
								dt.sub-tit 복싱 선수단
								dd.txt - 복싱 프로선수 및 아마튜어 선수를 희망하는 자

						.recruit-info-wrap
							p.tit 지원 사항
							span.txt 교육비 지원, 체육 분야 취업 지원, 체육관련 국가 자격증 취득
						
						.recruit-info-wrap
							p.tit 접수 방법
